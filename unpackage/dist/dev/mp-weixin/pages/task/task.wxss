
page {
	width: 100%;
	height: 100%;
}
.task-content {
	width: 100%;
	height: 100%;
}
.header-zhan{
	width: 100%;
	height: 80rpx;
}
.task-table {
	width: 100%;
	background: #3E414F;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
}
.task-list {
	width: 100%;
	overflow: hidden;
	padding-top: 20rpx;
	position: relative;
}
.no-task {
	width: 100%;
	height: calc(100vh - 250rpx);
}
.no {
	position: absolute;
	left: 211rpx;
	top: 237rpx;
	margin: auto;
	width: 329rpx;
	overflow: hidden;
}
.no image {
	width: 329rpx;
	height: 288rpx;
	display: block;
}
.no text:nth-of-type(1) {
	display: block;
	width: 100%;
	overflow: hidden;
	font-size: 38rpx;
	color: #666666;
	text-align: center;
	margin-top: 46rpx;
}
.no text:nth-of-type(2) {
	display: block;
	width: 100%;
	overflow: hidden;
	font-size: 42rpx;
	color: #FF8833;
	text-align: center;
	margin-top: 26rpx;
	text-decoration: underline
}

