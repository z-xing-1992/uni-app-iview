
page{width: 100%;height: 100%;}
.today-task-container{width: 100%;height: 100%;}
.header-zhan{width: 100%;height: 118rpx;}
.search-screening{width: 100%;overflow: hidden;background:#3E414F;position: fixed;left: 0;top: 0;z-index: 999;}
.search{float: left;position: relative;}
.search image{width: 31rpx;height: 31rpx;position: absolute;top: 50rpx;left: 40rpx;}
.search input{width: 520rpx;height: 68rpx;-webkit-border-radius: 34rpx;border-radius: 34rpx;background: #5C5E67;margin: 30rpx 0 20rpx 24rpx;
padding: 0 0 0 60rpx;color: #D4D3D3;}
.screening{float: right;font-size: 26rpx;color: #fff;height: 68rpx;margin-top: 30rpx;margin-right: 24rpx;line-height: 68rpx;}
.screening text{display: inline-block;}
.screening image{width: 28rpx;height: 27rpx;display: block;float: right;margin: 20rpx 0 0 10rpx;}
.taskList{width: 100%;overflow: hidden;position: relative;}
.Poup{width: 100%;overflow: hidden;}
.screening-poup{width: 100%;overflow: hidden;border-bottom: 1rpx solid #E7E7E7;padding: 0 0 0 52rpx;}
.screening-title{margin-top: 51rpx;font-size:36rpx;color: #3E414F;font-weight: bold;margin-bottom: 74rpx;}
.delivery-title{font-size:30rpx;color: #3E414F;margin-bottom: 30rpx;}
.delivery-list{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-pack: space-evenly;-webkit-justify-content: space-evenly;justify-content: space-evenly;}
.delivery-list text{display: inline-block;width:200rpx;height: 66rpx;text-align: center;line-height: 66rpx;
font-size:26rpx;-webkit-border-radius: 8rpx;border-radius: 8rpx;margin-bottom: 40rpx;}
.select{width: 100%;overflow: hidden;}
.select text{display: inline-block;height: 90rpx;line-height: 90rpx;text-align: center;font-size: 30rpx;}
.select text:nth-of-type(1){width: 251rpx;border: 2rpx solid #C5C9D1;-webkit-border-radius: 8rpx;border-radius: 8rpx;margin: 30rpx 30rpx 30rpx 51rpx;}
.select text:nth-of-type(2){width: 368rpx;margin: 30rpx 0;background: -webkit-gradient(linear, right top, left top, from(#FF8833), to(#FAA951));background: -webkit-linear-gradient(right, #FF8833 0%, #FAA951 100%);background: linear-gradient(270deg, #FF8833 0%, #FAA951 100%);-webkit-border-radius: 8rpx;border-radius: 8rpx;color: #fff;}
.Active{background: #FFF3EA;border: 2rpx solid #FF8833;-webkit-border-radius: 8rpx;border-radius: 8rpx;color: #FF8833;}
.Actove{background: #F5F7FA;-webkit-border-radius: 8rpx;border-radius: 8rpx;color:#3E414F;}
.no-task {
	width: 100%;
	height: calc(100vh - 250rpx);
}
.no {
	position: absolute;
	left: 211rpx;
	top: 237rpx;
	margin: auto;
	width: 329rpx;
	overflow: hidden;
}
.no image {
	width: 329rpx;
	height: 288rpx;
	display: block;
}
.no text:nth-of-type(1) {
	display: block;
	width: 100%;
	overflow: hidden;
	font-size: 38rpx;
	color: #666666;
	text-align: center;
	margin-top: 46rpx;
}
.no text:nth-of-type(2) {
	display: block;
	width: 100%;
	overflow: hidden;
	font-size: 42rpx;
	color: #FF8833;
	text-align: center;
	margin-top: 26rpx;
	text-decoration: underline
}

