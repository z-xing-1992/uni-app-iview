page {
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
  height: 100%;
}
.sys_btn {
  padding: 0;
  width: 150rpx;
  display: block;
  float: left;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background: #3E414F;
  border: none;
  outline: none;
  color: #fff;
}
.sys_btn::after {
  border: none;
}
.topBox {
  width: 100%;
  background: #3E414F;
}
.location {
  float: left;
  margin-left: 24rpx;
  height: 100%;
  line-height: 88rpx;
}
.location image {
  width: 28rpx;
  height: 33rpx;
  display: block;
  float: left;
  margin-top: 30rpx;
}
.location text {
  display: block;
  float: left;
  font-size: 26rpx;
  color: #fff;
}
.header-title {
  float: left;
  font-size: 30rpx;
  color: #fff;
  font-family: PingFang SC;
  margin-left: 140rpx;
  height: 100%;
  line-height: 88rpx;
}
.user {
  width: 100%;
  height: 338rpx;
  background: #3E414F;
  padding-top: 55rpx;
}
.userInfo {
  width: 100%;
  height: 110rpx;
}
.userInfo-msg {
  float: left;
  width: 50%;
  height: 100%;
}
.userInfo-msg image {
  width: 100rpx;
  height: 100rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  float: left;
  display: block;
  margin-left: 30rpx;
}
.userInfo-msg text {
  display: block;
  float: left;
  line-height: 100rpx;
  color: #fff;
  font-size: 30rpx;
  margin-left: 21rpx;
}
.current-task {
  float: right;
  position: relative;
  width: 50%;
  height: 100%;
  background: rgba(80, 83, 95, 0.6);
  -webkit-border-radius: 8px 0px 0px 8px;
          border-radius: 8px 0px 0px 8px;
}
.pickGoods {
  position: absolute;
  top: 30rpx;
  right: 10rpx;
  font-size: 30rpx;
}
.pickGoods text {
  color: #FF8833;
  display: block;
  float: left;
}
.pickGoods image {
  display: block;
  float: right;
  width: 11rpx;
  height: 18rpx;
  margin: 13rpx 0 0 10rpx;
}
.current-task text {
  display: block;
}
.current {
  font-size: 26rpx;
  color: #BDC0D2;
  margin: 10rpx 0 13rpx 22rpx;
}
.nocurrent {
  font-size: 30rpx;
  color: #fff;
  margin-left: 22rpx;
}
.tabType {
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  margin-top: 60rpx;
}
.tabType view {
  width: 30%;
}
.tabType view text {
  display: block;
}
.tabType view text:nth-of-type(1) {
  font-size: 42rpx;
  color: #FEFEFE;
  text-align: center;
}
.tabType view text:nth-of-type(2) {
  font-size: 28rpx;
  color: #BDC0D2;
  text-align: center;
}
.task {
  width: 100%;
  overflow: hidden;
  padding: 0 50rpx;
}
.today-task,
.history-task {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.today-task {
  margin: 30rpx 0 30rpx 0;
}
.today-task text,
.history-task text {
  display: block;
  float: left;
  font-size: 30rpx;
  color: #3E414F;
}
.todayLogo {
  width: 30rpx;
  height: 30rpx;
  display: block;
  float: left;
  margin-top: 26rpx;
  margin-right: 13rpx;
}
.historyLogo {
  display: block;
  float: left;
  width: 28rpx;
  height: 30rpx;
  margin-top: 26rpx;
  margin-right: 13rpx;
}
.arrowRight {
  width: 16rpx;
  height: 26rpx;
  float: right;
  margin-top: 30rpx;
}

